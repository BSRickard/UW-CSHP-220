<Window x:Class="ContactApp.MouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="MouseWindow" Height="300" Width="300">
    <DockPanel>
        <StatusBar x:Name="uxStatusBar" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="uxStatus" FontFamily="Consolas"/>
            </StatusBarItem>
        </StatusBar>
        <Canvas x:Name="uxCanvas"
            MouseDown= "uxCanvas_MouseDown"
            MouseMove= "uxCanvas_MouseMove" 
            MouseUp=   "uxCanvas_MouseUp"
            Background="Transparent">
        </Canvas>
    </DockPanel>
</Window>
